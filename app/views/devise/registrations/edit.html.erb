<div class="panel panel-default col-sm-8 col-sm-offset-2">
  <div class="panel-body">
    <h1 class="col-sm-12" style="text-align: right">تنظیمات کاربر</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, "data-parsley-validate" => '' }) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group col-sm-12">
        <%= f.label :name %><br />
        <%= f.text_field :name, class: "form-control", autofocus: true, :required => '' %>
      </div>

      <div class="form-group col-sm-12">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: "form-control", autofocus: true, :required => '', html: { "data-parsley-trigger" => "change" } %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group col-sm-12">
        <%= f.label "New password" %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
        <% if @minimum_password_length %>
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="form-group col-sm-12">
        <%= f.label "Confirm new password" %><br />
        <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off" %>
      </div>

      <div class="form-group col-sm-12">
        <%= f.label :current_password %><br />
        <%= f.password_field :current_password, class: "form-control", autocomplete: "off", :required => '' %>
      </div>

      <div class="form-group col-sm-2">
        <%= f.submit "Update", class: "btn btn-primary" %>
      </div>

      <div class="form-group col-sm-2">
        <%= button_to "Cancel", :back, class: "btn btn-default" %></p>
      </div>

      <div class="col-sm-2"
        <%= button_to "Delete my account", registration_path(@user), class: "btn btn-link", data: { confirm: "Are you sure?" }, method: :delete %>
      </div>
    <% end %>
